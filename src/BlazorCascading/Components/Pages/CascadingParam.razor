@rendermode InteractiveServer

<h3>@Title</h3>

<div>Name: [@Name]</div>
<div>Age: [@Age]</div>
<div>Gender: [@Gender]</div>

@code {
    [CascadingParameter]
    public string Name { get; set; } = "";

    [CascadingParameter]
    public int Age { get; set; }

    [CascadingParameter(Name = "Gender")]
    public string Gender { get; set; } = "N/A";


    [Parameter]
    public string Title { get; set; } = "CascadingParam";
}
