@page "/"
@rendermode InteractiveServer


<CascadingValue Name="Name" Value="@("Saleh Xafan")">
    <CascadingValue Name="Age" Value="41">
        <CascadingValue Name="Gender" Value="v">
            <CascadingParam Title="CascadingValue" />
        </CascadingValue>
    </CascadingValue>
</CascadingValue>

<hr />

<ManualProvider>
    <CascadingParam Title="ManualProvider" />
</ManualProvider>

<hr />

<CascadingValueProvider Values="values">
    <CascadingParam Title="CascadingValueProvider" />
</CascadingValueProvider>

@code {
    static string? v = null;
    private List<CascadingValueRecord> values = new()
    {
        CascadingValueRecord.From("Name", "Saleh Xafan"),
        CascadingValueRecord.From("Age", 41),
        CascadingValueRecord.From("Gender", v)
    };
}
